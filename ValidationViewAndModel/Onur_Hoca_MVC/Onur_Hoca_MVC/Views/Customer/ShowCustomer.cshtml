@model Customer
<div>
    <div class="row">
        <div class="col-md-9">
            <form asp-action="ShowCustomer" asp-controller="Customer" method="post">
                <div class="mb-3">
                    <label for="inputId" class="form-label">Id</label>
                    <input asp-for="Id" type="number" class="form-control" id="inputId" placeholder="ID" aria-describedby="emailHelp">
                </div>
                <div class="mb-3">
                    <label for="inputCompanyName" class="form-label">Company Name</label>
                    <input asp-for="CompanyName" type="text" class="form-control" placeholder="Company Name" id="inputCompanyName">
                </div>
                <div class="mb-3">
                    <label for="inputEmail" class="form-label">Email</label>
                    <input asp-for="Email" class="form-control" placeholder="Email" id="inputEmail">
                    <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
                </div>
                <div class="mb-3">
                    <label for="inputAge" class="form-label">Age</label>
                    <input asp-for="Age" type="number" class="form-control" placeholder="Age" id="inputAge">
                </div>
                <div class="mb-3">
                    <label for="inputJoinDate" class="form-label">Join Date</label>
                    <input asp-for="JoinDate" type="date" class="form-control" id="inputJoinDate">
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
            <div asp-validation-summary="ModelOnly" class="alert-danger"></div>

        </div>

        <div class="col-md-3 ">

        </div>

    </div>
</div>



