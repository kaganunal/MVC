@model List<AppUser>

<table class="table table-dark">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">UserName</th>
            <th scope="col">Email</th>
            <th scope="col">Remove</th>
            <th scope="col">Edit</th>
        </tr>
    </thead>
    <tbody>
         <form asp-action="Delete">
            @{
                for (int i = 0; i < Model.Count; i++)
                {
                <tr>
                    <th scope="row">@(i + 1)</th>
                    <td>@Model[i].UserName</td>
                    <td>@Model[i].Email</td>
                    <td><a class="btn btn-danger" asp-controller="Account" asp-action="Delete" asp-route-id="@Model[i].Id">Sil</a></td>
                    <td><a class="btn btn-danger" asp-controller="Account" asp-action="Update" asp-route-id="@Model[i].Id">Güncelle</a></td>
                </tr>
                }
            }
        </form>
    </tbody>
</table>
