@model Numbers

<div class="mt-3">
    <div class="bg-success">    
        <div class="">
            <form asp-action="ShowDifferential" asp-controller="Algorithms" class="card-group">
                <div class="card-body">
                    <label for="inputLower">Lower Bound</label>
                    <input asp-for="Number1" type="number" class="form-control" id="inputLower" placeholder="Number">
                </div>
                <div class="card-body">
                    <label for="inputUpper">Upper Bound</label>
                    <input asp-for="Number2" type="number" class="form-control" id="inputUpper" placeholder="Number">
                </div>
                <div class="card-body mt-4">
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
            </form>
            <div class="m-5">
                @{
                    if (ViewBag.message == null)
                    {
                        <div>
                            @ViewBag.diff
                        </div>

                    }
                    else
                    {
                        <div>
                            @ViewBag.message
                        </div>
                    }
                }
            </div>
        </div>

    </div>
</div>
