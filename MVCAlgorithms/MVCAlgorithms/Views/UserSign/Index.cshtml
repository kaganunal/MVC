@model User


<section>
    <div class="container h-300">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-lg-12 col-xl-11">
                <div class="card text-black" style="border-radius: 25px;">
                    <div class="card-body p-md-5">
                        <div class="row justify-content-center">
                            <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">

                                <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Sign up</p>

                                <form class="mx-1 mx-md-4" asp-action="Index" asp-controller="UserSign">

                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <i class="fas fa-user fa-lg me-3 fa-fw"></i>
                                        <div class="form-outline flex-fill mb-0">
                                            <label class="form-label" for="inputUserName">User Name</label>
                                            <input asp-for="UserName" type="text" id="inputUserName" class="form-control" />
                                            <span asp-validation-for="UserName" asp-for="UserName" class="text-danger"></span>
                                        </div>
                                    </div>

                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <i class="fas fa-envelope fa-lg me-3 fa-fw"></i>
                                        <div class="form-outline flex-fill mb-0">
                                            <label class="form-label" for="inputEmail">Mail</label>
                                            <input asp-for="UserEmail" id="inputEmail" class="form-control" />
                                            <span asp-validation-for="UserEmail" asp-for="UserEmail" class="text-danger"></span>
                                        </div>
                                    </div>


                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <i class="fas fa-lock fa-lg me-3 fa-fw"></i>
                                        <div class="form-outline flex-fill mb-0">
                                            <label class="form-label" for="inputID">Identification Number</label>
                                            <input asp-for="IdentificationNumber" type="text" id="inputID" class="form-control" />
                                            <span asp-validation-for="IdentificationNumber" asp-for="IdentificationNumber" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <i class="fas fa-lock fa-lg me-3 fa-fw"></i>
                                        <div class="form-outline flex-fill mb-0">
                                            <label class="form-label" for="inputUserCode">User Code</label>
                                            <input asp-for="UserCode" type="number" id="inputUserCode" class="form-control" />
                                            <span asp-validation-for="UserCode" asp-for="UserCode" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <i class="fas fa-lock fa-lg me-3 fa-fw"></i>
                                        <div class="form-outline flex-fill mb-0">
                                            <label class="form-label" for="inputAge">Age</label>
                                            <input asp-for="Age" type="number" id="inputAge" class="form-control" />
                                            <span asp-validation-for="Age" asp-for="Age" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <i class="fas fa-lock fa-lg me-3 fa-fw"></i>
                                        <div class="form-outline flex-fill mb-0">
                                            <label class="form-label" for="inputPassword">Password</label>
                                            <input asp-for="Password" type="password" id="inputPassword" class="form-control" />
                                            <span asp-validation-for="Password" asp-for="Password" class="text-danger"></span>
                                        </div>
                                    </div>

                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <i class="fas fa-key fa-lg me-3 fa-fw"></i>
                                        <div class="form-outline flex-fill mb-0">
                                            <label class="form-label" for="inputRePassword">Repeat password</label>
                                            <input asp-for="PasswordRepeat" type="password" id="inputRePassword" class="form-control" />
                                            <span asp-for="PasswordRepeat" asp-validation-for="PasswordRepeat" class="text-danger"></span>
                                        </div>
                                    </div>

                                    <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                                        <button type="submit" class="btn btn-primary btn-lg">Register</button>
                                    </div>

                                </form>

                            </div>
                            <div class="col-md-10 col-lg-6 col-xl-7 d-flex align-items-center order-1 order-lg-2">

                                <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-registration/draw1.webp"
                  class="img-fluid" alt="Sample image" />

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
