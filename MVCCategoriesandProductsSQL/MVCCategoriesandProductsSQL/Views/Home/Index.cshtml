@model IEnumerable<MVCCategoriesandProductsSQL.Models.Category>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Categories and Products</h1>
@foreach (var item in Model)
{
    <div class="border shadow m-3 ">
        <table class="table ">
            <thead class="container" style="background-color: #FF6600; justify-content:space-between">
                <tr>
                    <th style="color: #fff">
                        @item.Name
                    </th>
                    <th style="color: #fff">
                        Price
                    </th>
                    <th style="color: #fff">
                        Is in Stock
                    </th>
                </tr>
            </thead>
            @foreach (var product in item.Products)
            {
                <tbody>
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => product.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => product.Price)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => product.IsInStock)
                        </td>
                    </tr>
                </tbody>
            }
        </table>
    </div>
}

