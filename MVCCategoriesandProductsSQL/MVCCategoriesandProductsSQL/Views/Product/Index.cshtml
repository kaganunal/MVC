<div class="container">
    <div class=" row">
        @foreach (var item in Model)
        {
            <div class="col-lg-4 border-2">
                <div class="card" style="width: 18rem;">
                    <img class="card-img-top width:80px height:200px;" src="@Html.DisplayFor(modelItem => item.PicturePath)" alt="Card image cap">
                    <div class="card-body">

                        <p class="card-text">
                            Name: @Html.DisplayFor(modelItem => item.Name)
                        </p>
                        <p class="card-text">Price: @Html.DisplayFor(modelItem => item.Price)</p>
                        @if (item.IsInStock)
                        {
                            <p class="card-text">Is In Stock: In Stock</p>
                        }
                        else
                        {
                            <p class="card-text" style="color:red">Out of Stock</p>
                        }

                        <p class="card-text">Category: @Html.DisplayFor(modelItem => item.Category.Name)</p>

                        <a asp-action="Update" asp-route-id="@item.Id" class="btn btn-warning"><i class="fa-sharp fa-solid fa-pen-to-square"></i></a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-warning"><i class="fa-sharp fa-solid fa-trash"></i></a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-warning"><i class="fa-sharp fa-solid fa-circle-info"></i></a>
                    </div>
                </div>
            </div>
        }
    </div>

</div>


